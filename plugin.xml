<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  id="fr-dialog-macUtils"
  version="0.2.1">
  <name>MacAddress</name>
  <description>Cordova MacAddress Plugin</description>
  <license>Apache 2.0</license>
  <keywords>cordova,MacAddress</keywords>


  <js-module src="www/MacAddress.js" name="MacAddress">
    <clobbers target="window.MacAddress" />
  </js-module>

  <!-- android -->
  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="MacAddressPlugin">
        <param name="android-package" value="fr.dialog.macUtils.Cordova"/>
      </feature>
    </config-file>
    <config-file target="AndroidManifest.xml" parent="/*">
      <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    </config-file>

    <source-file src="src/android/Cordova.java" target-dir="src/fr/dialog/macUtils/" />
    <source-file src="src/android/MacAddressUtils.java" target-dir="src/fr/dialog/macUtils/" />
  </platform>

  <!-- ios -->
  <platform name="ios">
   <config-file target="config.xml" parent="/*">
     <feature name="MacAddressPlugin">
       <param name="ios-package" value="MacAddressPlugin" />
     </feature>
   </config-file>

   <header-file src="src/ios/MacAddressPlugin.h" />
   <source-file src="src/ios/MacAddressPlugin.m" />
 </platform>

</plugin>
